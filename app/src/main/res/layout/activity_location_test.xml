<?xml version="1.0" encoding="utf-8"?>
<!-- LocationTestActivity 레이아웃 -->
<!-- Layout for LocationTestActivity -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 제목 / Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Service Test\n위치 서비스 테스트"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 권한 상태 카드 / Permission Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="권한 상태 / Permission Status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPermissionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="권한 확인 중..."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnRequestPermissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="권한 요청"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2196F3"
                    android:layout_gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Provider 상태 카드 / Provider Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 제공자 상태 / Provider Status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvProviderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GPS: ❌ Network: ❌ Passive: ❌ Fused: ❌"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnProviderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태 확인"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF9800"
                    android:layout_gravity="center"
                    android:enabled="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 현재 위치 정보 카드 / Current Location Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 위치 정보 / Current Location"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="현재 위치: 조회되지 않음"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvAccuracy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="정확도: -"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제공자: -"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="시간: -"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnGetCurrentLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="현재 위치"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="4dp"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/btnToggleMonitoring"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="모니터링 시작"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginStart="4dp"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 위치 업데이트 컨트롤 카드 / Location Updates Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 업데이트 / Location Updates"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStartLocationUpdates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="업데이트 시작"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#2196F3"
                        android:layout_marginEnd="4dp"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/btnStopLocationUpdates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="업데이트 중지"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#FF5722"
                        android:layout_marginStart="4dp"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 저장된 위치 관리 카드 / Saved Location Management Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장된 위치 관리 / Saved Locations"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSavedLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저장된 위치: 없음"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDistanceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="거리/방향: 계산되지 않음"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnSaveLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="위치 저장"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#9C27B0"
                        android:layout_marginEnd="4dp"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/btnLoadLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="위치 로드"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#607D8B"
                        android:layout_marginStart="4dp"
                        android:enabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCalculateDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거리 계산"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="4dp"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/btnClearSavedLocations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전체 삭제"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#F44336"
                        android:layout_marginStart="4dp"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 상태 로그 카드 / Status Log Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="상태 로그 / Status Log"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <Button
                        android:id="@+id/btnClearLogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그 지우기"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#795548"
                        android:padding="8dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/black"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위치 서비스 테스트 준비 완료\n"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </ScrollView>

</layout>