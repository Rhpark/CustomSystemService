<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Data binding variables if needed -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- Title and Permission Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephony Info Test"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_permission_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking permissions..."
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#FF9800" />

            <Button
                android:id="@+id/btn_request_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Permissions"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Basic Info Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_get_basic_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Basic Info"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_get_carrier_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carrier Info"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_get_sim_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SIM Info"
                android:textSize="12sp"
                android:enabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_get_network_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Network Info"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_get_multi_sim_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multi SIM"
                android:textSize="12sp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Real-time Monitoring Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real-time Monitoring"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start_monitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Monitoring"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_stop_monitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop Monitoring"
                android:textSize="14sp"
                android:backgroundTint="#F44336"
                android:enabled="false" />

        </LinearLayout>

        <!-- Test Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pattern Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#7B1FA2"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_test_result_pattern"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Result Pattern"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_traditional_pattern"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Traditional"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_api_compatibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="API Compatibility"
                android:textSize="12sp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Utility Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_refresh_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refresh All"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/btn_clear_logs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Logs"
                android:textSize="14sp"
                android:backgroundTint="#607D8B" />

        </LinearLayout>

        <!-- Log Output Area -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execution Logs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/log_bg"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#212121"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.2" />

        </ScrollView>

    </LinearLayout>

</layout>