<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Data binding variables if needed -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- Title and Permission Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Architecture Test - Phase 4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3-Class Architecture: SimInfo + NetworkConnectivityInfo + TelephonyInfo"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#558B2F"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_permission_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking permissions..."
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#FF9800" />

            <Button
                android:id="@+id/btn_request_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Permissions"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- New Architecture Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Architecture Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_test_sim_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SimInfo"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#4CAF50"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_network_connectivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NetworkInfo"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_telephony_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TelephonyInfo"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:enabled="false" />

        </LinearLayout>

        <!-- Integration Tests -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Integration and Compatibility Tests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_test_cross_reference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cross Ref"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#9C27B0"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_compatibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compatibility"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#607D8B"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_test_performance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Performance"
                android:textSize="12sp"
                android:backgroundTint="#795548"
                android:enabled="false" />

        </LinearLayout>

        <!-- Utility Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_run_all_tests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Run All Tests"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#E91E63"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_clear_logs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textSize="14sp"
                android:backgroundTint="#9E9E9E" />

        </LinearLayout>

        <!-- Log Output Area -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Execution Logs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/log_bg"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#212121"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.2" />

        </ScrollView>

    </LinearLayout>

</layout>