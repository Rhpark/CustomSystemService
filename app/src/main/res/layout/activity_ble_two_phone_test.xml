<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔗 두 스마트폰 BLE 통신 테스트"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- 디바이스 정보 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 디바이스 정보"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="디바이스 이름: -"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBleStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BLE 상태: -"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBleMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="모드: IDLE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvConnectedDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="연결된 디바이스: 없음"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 모드 선택 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚀 모드 선택"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ 사용법: 한 폰은 Peripheral, 다른 폰은 Central 선택"
                    android:textSize="12sp"
                    android:textColor="#FF6600"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnPeripheralMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📡 Peripheral 모드 (광고자)"
                    android:enabled="false"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnCentralMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔍 Central 모드 (스캐너)"
                    android:enabled="false"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnScanOnly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📱 스캔만 하기 (연결 안 함)"
                    android:enabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 통신 테스트 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💬 메시지 통신"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSendMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📤 테스트 메시지 전송"
                    android:enabled="false"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvLastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="마지막 메시지: 없음"
                    android:textSize="14sp"
                    android:background="#F5F5F5"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 스캔 결과 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 스캔 결과"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvScanResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="스캔 결과가 여기에 표시됩니다"
                    android:textSize="14sp"
                    android:background="#F5F5F5"
                    android:padding="8dp"
                    android:minHeight="60dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 제어 버튼 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ 제어"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnCheckStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 상태 확인"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔌 연결 해제"
                    android:enabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 사용 안내 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 사용 순서:\n1. 두 폰 모두 권한 허용\n2. 한 폰에서 Peripheral 모드 실행\n3. 다른 폰에서 Central 모드로 연결\n4. 메시지 전송 테스트"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>