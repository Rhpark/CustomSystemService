<?xml version="1.0" encoding="utf-8"?>
<!-- BatteryTestActivity 레이아웃 -->
<!-- Layout for BatteryTestActivity -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 제목 / Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery State Monitor Test\n배터리 상태 모니터 테스트"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 권한 상태 카드 / Permission Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="권한 상태 / Permission Status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPermissionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="권한 상태 확인 중... / Checking permissions..."
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:background="#E3F2FD"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 실시간 배터리 정보 카드 / Real-time Battery Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실시간 배터리 정보 / Real-time Battery Info"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvBatteryCapacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="배터리 잔량 / Capacity: 대기 중... / Waiting..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvBatteryTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="온도 / Temperature: 대기 중... / Waiting..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvBatteryVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전압 / Voltage: 대기 중... / Waiting..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvBatteryCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전류 / Current: 대기 중... / Waiting..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Fallback 테스트 카드 / Fallback Test Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFF3E0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fallback 메커니즘 테스트 / Fallback Mechanism Test"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFallbackTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PowerProfile 상태: 확인 중... / PowerProfile Status: Checking..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:padding="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 컨트롤 버튼들 / Control Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컨트롤 / Controls"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- 모니터링 관련 버튼들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnStartMonitoring"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="모니터링 시작\nStart Monitoring"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50" />

                    <Button
                        android:id="@+id/btnStopMonitoring"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="모니터링 중지\nStop Monitoring"
                        android:textSize="12sp"
                        android:backgroundTint="#F44336"
                        android:enabled="false" />

                </LinearLayout>

                <!-- 테스트 관련 버튼들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnGetInstantInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="즉시 정보 조회\nGet Instant Info"
                        android:textSize="12sp"
                        android:backgroundTint="#2196F3" />

                    <Button
                        android:id="@+id/btnTestFallback"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Fallback 테스트\nTest Fallback"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800" />

                </LinearLayout>

                <!-- 유틸리티 버튼들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCheckPermissions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="권한 상태 확인\nCheck Permission Status"
                        android:textSize="12sp"
                        android:backgroundTint="#9C27B0" />

                    <Button
                        android:id="@+id/btnClearLog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="로그 지우기\nClear Log"
                        android:textSize="12sp"
                        android:backgroundTint="#607D8B" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 실행 로그 카드 / Execution Log Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실행 로그 / Execution Log"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F8F8"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvExecutionLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="로그가 여기에 표시됩니다...\nLogs will be displayed here..."
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:fontFamily="monospace" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </ScrollView>

</layout>