<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".BleTestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLE Controller Test"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- BLE Status Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Checking BLE status..."
                        android:textSize="14sp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Control Buttons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BLE Controls"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btnInit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Initialize"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@android:color/holo_blue_light" />

                        <Button
                            android:id="@+id/btnCheckPermissions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Permissions"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="@android:color/holo_orange_light" />

                    </LinearLayout>

                    <!-- Row 2: Central Mode (Scanning) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btnStartScan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Start Scan"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@android:color/holo_green_light"
                            android:enabled="false" />

                        <Button
                            android:id="@+id/btnStopScan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stop Scan"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="@android:color/holo_red_light"
                            android:enabled="false" />

                    </LinearLayout>

                    <!-- Row 3: Peripheral Mode (Advertising) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/btnStartAdvertising"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Start Advertising"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="#FF9800"
                            android:enabled="false" />

                        <Button
                            android:id="@+id/btnStopAdvertising"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stop Advertising"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="#F44336"
                            android:enabled="false" />

                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCheckStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@android:color/holo_purple"
                            android:enabled="false" />

                        <Button
                            android:id="@+id/btnClear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Clear"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Discovered Devices List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discovered BLE Devices"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDeviceCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 devices found"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewDevices"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@android:color/white"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- System Info Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Info"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <TextView
                            android:id="@+id/tvResults"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="System info will be displayed here..."
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@android:color/white"
                            android:padding="8dp"
                            android:textIsSelectable="true"
                            android:textColor="@android:color/black" />

                    </ScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Data Communication Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Communication"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Message Type Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message Type:"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical" />

                        <Spinner
                            android:id="@+id/spinnerMessageType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <!-- Data Input Form -->
                    <LinearLayout
                        android:id="@+id/layoutDataInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <!-- Text Message Input -->
                        <EditText
                            android:id="@+id/etTextMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter message text..."
                            android:textSize="14sp"
                            android:maxLines="3"
                            android:visibility="gone" />

                        <!-- Sensor Data Inputs -->
                        <LinearLayout
                            android:id="@+id/layoutSensorInputs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etTemperature"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Temperature (Â°C)"
                                    android:inputType="numberDecimal"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="4dp" />

                                <EditText
                                    android:id="@+id/etHumidity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Humidity (%)"
                                    android:inputType="numberDecimal"
                                    android:textSize="12sp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etBattery"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Battery (%)"
                                    android:inputType="number"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="4dp" />

                                <EditText
                                    android:id="@+id/etLight"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Light (lux)"
                                    android:inputType="numberDecimal"
                                    android:textSize="12sp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Control Command Inputs -->
                        <LinearLayout
                            android:id="@+id/layoutControlInputs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/etCommand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Command (LED_ON, LED_OFF, etc.)"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etParameter"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Parameter (optional)"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="4dp" />

                                <EditText
                                    android:id="@+id/etValue"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Value (optional)"
                                    android:inputType="numberDecimal"
                                    android:textSize="12sp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Send Button -->
                    <Button
                        android:id="@+id/btnSendData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send Message"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:textColor="@android:color/white"
                        android:enabled="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Received Messages -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Received Messages"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <Button
                            android:id="@+id/btnClearMessages"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Clear"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:backgroundTint="@android:color/darker_gray" />

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <TextView
                            android:id="@+id/tvReceivedMessages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No messages received yet..."
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@android:color/white"
                            android:padding="8dp"
                            android:textIsSelectable="true"
                            android:textColor="@android:color/black" />

                    </ScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Footer Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip: Location and Bluetooth permissions are required for BLE functionality."
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

</layout>